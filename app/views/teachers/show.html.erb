<div class="container">
<% if @subjects.first != nil %>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Дисципліна</th>
        <th>Тип</th>
        <th>Викладач</th>
        <th>Навантаження</th>
      </tr>
    </thead>
    <tbody>
	    <% @subjects.each do |s| %>
	      <tr>
			    <td><%= s.dname %></td>
	        <td><%= s.type %></td>
	        <td><%= s.tname %></td>
	        <td><%= s.loading %></td>
          <% if session[:current_teacher] %>
           <td><%= link_to "Назначити викладача", "/teachers/teacher_null/#{s.id}/put", :method => :put %></td>
          <% else %>
            <td><%= link_to "Назначити викладача", "/subjects/#{s.id}/edit" %></td>
          <% end %>
          <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
    </tbody>
  </table>
</div>
<% else %>
<h2>Вільних предметів немає.</h2>
<% end %>
</div>