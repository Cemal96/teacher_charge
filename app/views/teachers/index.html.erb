<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Викладач</th>
        <th>Посада</th>
        <th>Навантаження</th>
        <th>К-сть предметів</th>
      </tr>
    </thead>
    <tbody>
	    <% @teachers.each do |f| %>
	      <tr>
			    <td><%= f.name %></td>
	        <td><%= f.position %></td>
          <% if f.sumload != nil %>
  	        <td><%= f.sumload %></td>
            <td><%= f.count %></td>
          <% else %>
            <td>Відсутнє</td>
            <td><%= f.count %></td>
          <% end %>
          <% if f.sumload != nil %>
            <% if f.sumload <= 900 %>
              <td><%= link_to "Призначити викладача", "teachers/teacher_null/#{f.id}" %></td>
            <% end %>
          <% else %>
            <td><%= link_to "Призначити викладача", "teachers/teacher_null/#{f.id}" %></td>
          <% end %>
          <td><%= link_to 'Звільнити', f, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
    </tbody>
  </table>
</div>